<p>
  <h5>User identity</h5>
  <label>ID</label>
  <Input @type="id" @value={{this.userId}} />
  <label>Email</label>
  <Input @type="email" @value={{this.userEmail}} />
  <label>Name</label>
  <Input @type="name" @value={{this.userName}} />

  <pre>{{this.userData}}</pre>
</p>

<br /><hr /><br />

<button type="button" {{on "click" this.regularError}}>
  Regular ol' error
</button>

<button type="button" {{on "click" this.emberError}}>
  Ember error
</button>

<button type="button" {{on "click" this.uncaughtPromise}}>
  Uncaught promise rejection
</button>

<button type="button" {{on "click" this.manualReport}} class="manual-report">
  Manually Report
</button>

<LinkTo @route="other-one">Another route</LinkTo>

<h5>What have we sent to Raygun?</h5>
{{#if this.raygunEvents}}
  {{#each this.raygunEvents as |e| }}
    <pre>{{ e }}</pre>
    <hr />
  {{/each}}

  Sent to Raygun: <span class="event-count">{{this.raygunEvents.length}}</span>
{{else}}
  Nothing yet...
{{/if}}
